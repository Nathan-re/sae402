<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sae402"
        tools:targetApi="31">
        <activity
            android:name=".PartieClassique"
            android:exported="false" />
        <activity android:name=".historique"
            android:label="Historique"
            android:exported="true"/>
        <activity android:name=".choixNombreJoueurs"
            android:label="Choix du nombre de joueurs"
            android:exported="true"/>
        <activity android:name=".ModeDeJeu2Pers"
            android:label="Mode de jeu ayant 2 personnes"
            android:exported="true"/>
        <activity android:name=".ModeDeJeu4Pers"
            android:label="Mode de jeu ayant 4 personnes"
            android:exported="true"/>
        <activity android:name=".ChoixEquipe2pers"
            android:label="Choix des équipes pour 2 joueurs"
            android:exported="true"/>
        <activity android:name=".ChoixEquipe4pers"
            android:label="Choix des équipes pour 4joueurs"
            android:exported="true"/>
